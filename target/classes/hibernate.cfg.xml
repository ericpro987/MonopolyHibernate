<hibernate-configuration>
	<session-factory>
		<!-- SQL Dialect -->
		
		<!-- Database Connection Settings -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<!-- aixo ho heu de canviar per les vostres dades -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/MonopolyEric</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">super3</property>
		<!--create: esborra la BD cada cop que fas try i comença desde 0 -->
		<!--update: no esborra la BD, per tant, si fas inserts, en farà de nous -->
		<property name="hibernate.hbm2ddl.auto">create</property>
		<property name="show_sql">true</property>

		<!-- Specifying Session Context -->
		<property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>

		<!-- AQUI POSEU LES CLASSES QUE REPRESENTEN TAULES QUE FEU SERVIR -->
